<%- include ("../partials/header.ejs", {title: "Create room"}) %>
<div class="mt-3 container-fluid">
    <h2 class="text-right"><a href="/rooms"><i class="material-icons">backspace</i> back</a></h2>
    <form action="/rooms" method="post">
        <div class="form-group">
            <label for="name">Room name: <span class="text-danger">*</span></label>
            <input type="text" name="name" id="name" class="form-control" placeholder="enter here..." value="<%= locals.validated ? validated.name : '' %>" required>
            <% if (locals.errors && typeof errors.name != 'undefined') { %>
                <small class="text-danger"><%= errors.name.msg %></small>
            <% } %>
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <select class="form-control" name="category" id="category">
                <option value="science">science</option>
                <option value="sport">sport</option>
                <option value="travels">travels</option>
                <option value="hobby">hobby</option>
                <option value="shopping">shopping</option>
                <option value="COVID19">COVID19</option>
                <option value="other">other</option>
            </select>

            <% if (locals.errors && typeof errors.category != 'undefined') { %>
                <small class="text-danger"><%= errors.category.msg %></small>
            <% } %>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" name="description" id="description" placeholder="enter here..."><%- locals.validated ? validated.description : '' %></textarea>
            <% if (locals.errors && typeof errors.description != 'undefined') { %>
                <small class="text-danger"><%= errors.description.msg %></small>
            <% } %>
        </div>

        <div class="form-group">
            <span class="text-danger">* - required</span><br><br>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form>
</div>
<%- include ("../partials/footer.ejs") %>